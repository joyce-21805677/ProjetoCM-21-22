<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ProjetoCM" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
<!--        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->
        <item name="android:statusBarColor" tools:targetApi="l">@color/base_orange</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ToolbarTheme" parent="Theme.ProjetoCM">
        <item name="android:background">@color/orange</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="textColorTheme" parent="Theme.ProjetoCM">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/orange_text</item>
    </style>

    <style name="buttonColorTheme" parent="Theme.ProjetoCM">
        <item name="android:backgroundTint">@color/orange_button</item>
        <item name="android:textColor">@color/white</item>
    </style>



</resources>